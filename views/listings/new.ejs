<% layout("./layouts/boilerplate") %>
<div class="row-home mb-4 mt-4">
    <div class="col-8 offset-2" >
        
    <h3 class="mt-2">Create a new listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" style="border-radius: 1rem; border: 1px solid #8b2f2f;" placeholder="Add a catchy title" type="text" class="form-control" required >
            <div class="valid-feedback">
                Title Looks Good!
            </div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" style="border-radius: 1rem; border: 1px solid #8b2f2f;" class="form-control" required></textarea>
            <div class="invalid-feedback">
                Please Enter a sort description
            </div>
        </div>


          <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input name="listing[image][url]" style="border-radius: 1rem; border: 1px solid #8b2f2f;" type="file" class="form-control">
         </div>

        <div class="row">

        <div class="mb-3 col-md-4" >
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" style="border-radius: 1rem; border: 1px solid #8b2f2f;" placeholder="1200"  class="form-control" required>
                <div class="invalid-feedback">
                    Please enter valid price
                </div>
        </div>

        <div class="mb-3 col-md-8">
        <label for="category" class="form-label">Category</label>
        <select id="category" style="border-radius: 1rem; border: 1px solid #8b2f2f;" name="listing[category]" class="form-control" required>
          <option value="">Select a category</option>
          <option value="Trending">Trending</option>
          <option value="Rooms">Rooms</option>
          <option value="Iconic cities">Iconic cities</option>
          <option value="Mountains">Mountains</option>
          <option value="Castles">Castles</option>
          <option value="Amazing Pools">Amazing Pools</option>
          <option value="Camping">Camping</option>
          <option value="Farm">Farm</option>
          <option value="Arctic">Arctic</option>
          <option value="Domes">Domes</option>
          <option value="Boats">Boats</option>
        </select>
        <div class="invalid-feedback">Please select a valid category</div>
      </div>

        <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" style="border-radius: 1rem; border: 1px solid #8b2f2f;" placeholder="India" type="text" class="form-control" required>
                <div class="invalid-feedback">
                 Country shoud be valid
                </div>
        </div>

        </div>
        

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" style="border-radius: 1rem; border: 1px solid #8b2f2f;" placeholder="Jaipu, Rajasthan" type="text" class="form-control" required>
            <div class="invalid-feedback">
                 Location shoud be valid 
            </div>
        </div>

        
      
        <button class="btn mt-3" style="background-color:#8b2f2f; color:#f5f0e1; margin-bottom: 1rem;">Add</button>
        

    </form>
</div>
</div>

